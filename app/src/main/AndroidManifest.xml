<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.napier.mohs.instagramclone">
    <!-- Include following permission if you load images from Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Include following permission if you want to cache images on SD card -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home.ActivityHome">

        </activity>
        <activity android:name=".Diary.ActivityDiary"></activity>
        <activity android:name=".Profile.ActivityProfile"></activity>
        <activity android:name=".Search.ActivitySearch"
            android:windowSoftInputMode="adjustNothing"></activity>
        <activity android:name=".Share.ActivityShare"></activity>
        <activity android:name=".Profile.ActivityAccountSettings"></activity>
        <activity android:name=".Login.ActivityLogin">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".Login.ActivityRegister" />
        <activity android:name=".Share.ActivityNext" />
        <activity android:name=".Diary.ActivityAddDiary" />
        <activity android:name=".Diary.ActivityAddGoals" />
    </application>

</manifest>